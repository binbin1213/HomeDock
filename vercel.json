{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "source": "/bing-wallpaper",
      "destination": "/api/bing-wallpaper"
    }
  ],
  "outputDirectory": "."
}
